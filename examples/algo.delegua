importar { escrevaln, leia } de "io"

var salariomensal, percentual, reajuste, salarioreajustado: decimal;

salariomensal = leia("Digite o salario mensal: ")
percentual = leia("Digite o percentual: ")
reajuste = salariomensal * (percentual / 100)
salarioreajustado = reajuste + salariomensal

escrevaln("O valor do salário reajustado é R$", salarioreajustado)
